{
  "name": "parcel-react-base",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": "10",
    "npm": "6"
  },
  "browserslist": [
    "> 0.2%",
    "not dead",
    "not ie < 11",
    "not op_mini all"
  ],
  "scripts": {
    "start": "NODE_ENV=development parcel src/index.html",
    "build": "parcel build src/index.html",
    "test": "npm run test:lint",
    "test:lint": "eslint src"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "babel-eslint": "^10.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.19.1"
  },
  "dependencies": {
    "@emotion/core": "^10.0.27",
    "@mdx-js/react": "^1.5.5",
    "@reach/router": "^1.3.1",
    "@theme-ui/preset-bulma": "^0.3.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "theme-ui": "^0.3.1"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "plugins": [
      "prettier",
      "react",
      "react-hooks",
      "import"
    ],
    "extends": [
      "plugin:prettier/recommended",
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier/react",
      "plugin:import/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "all"
        }
      ],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "import/newline-after-import": "error",
      "import/order": [
        "error",
        {
          "newlines-between": "never"
        }
      ]
    }
  },
  "babel": {
    "plugins": [
      "@babel/transform-runtime"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint"
  }
}
